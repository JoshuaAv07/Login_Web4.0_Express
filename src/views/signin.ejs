<%- layout('layouts/main.ejs') %>
    <header class="intro">
        <img class="photo" src="img/Letter-J-PNG.png" alt="logo">
    </header>

    <h1 class="title1">Sign In</h1>
    <div class="links">
        <span class="span">or <a class="title-link" href="/signup" method="GET">Sign Up</a></span>
    </div>

    <% if (signinMessage) { %>
        <div class="alerts"><%= signinMessage %></div>
    <% } %>

    <form action="/signin" method="POST">
      <input name="email" type="text" placeholder="Enter your email">
      <input name="pass" type="password" placeholder="Enter your password">
      <input type="submit" value="Sign In">
    </form>
