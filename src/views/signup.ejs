<%- layout('layouts/main.ejs') %>
    <header class="intro">
        <img class="photo" src="img/Letter-J-PNG.png" alt="logo">
    </header>

    <h1 class="title1">Sign Up</h1>
    <div class="links">
        <span class="span">or <a class="title-link" href="/signin" method="GET">Sign In</a></span>
    </div>

    <% if (signupMessage) { %>
        <div class="alerts"><%= signupMessage %></div>
    <% } %>

    <form action="/signup" method="POST">
      <input name="email" type="text" placeholder="Enter an email">
      <input name="pass" type="password" placeholder="Enter a password">
      <input type="submit" value="Create Account">
    </form>